
@{
    ViewData["Title"] = "index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Hola Mundo!</title>
</head>
<body class="p-3 mb-2 bg-primary text-warning">


    <h1 align="center">HOSPITAL EN CASA</h1>
    <br />
    <br />

    <p class="">
        
        <a asp-action="datosPersona" class="btn btn-primary" type="button">Datos Persona</a>
        <a asp-action="CreatePersona" class="btn btn-primary" type="button">Registrarse</a>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
            Login
        </button>


        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="p-3 mb-2 bg-primary text-warning">
                        <div class="modal-body">

                            @await Html.PartialAsync("CreateLogin")
                        </div>
                        <div class="modal-footer">

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </p>

    <h2><marquee> BIENVENIDOS A HOSPITAL EN CASA  </marquee></h2>
    <br />
    <br />

    <img src="@Url.Content("~/img/imagenc1.png")" width="500px" height="400px" alt="imgf" />
    <img src="@Url.Content("~/img/imagenc8.png")" width="500px" height="400px" alt="imgf" />



 



</body>


</html>



